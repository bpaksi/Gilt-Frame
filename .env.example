# =============================================================================
# SUPABASE
# =============================================================================

# Local:  from `npm run db:start` → "Project URL"
# Remote: from Supabase dashboard → Project Settings → API
NEXT_PUBLIC_SUPABASE_URL=

# Local:  from `npm run db:start` → "Publishable" key
# Remote: from Supabase dashboard → Project Settings → API → anon/public
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Local:  from `npm run db:start` → "Secret" key
# Remote: from Supabase dashboard → Project Settings → API → service_role
# ⚠️  Never expose this to the browser — server-side only
SUPABASE_SERVICE_ROLE_KEY=

# =============================================================================
# ADMIN
# =============================================================================

# Secret query param that reveals the admin login page.
# Admin URL: /the-order/login?k=<ADMIN_KEY>
# Choose something unguessable — this is the only thing preventing discovery.
ADMIN_KEY=

# =============================================================================
# GAME — PASSPHRASE
# =============================================================================

# The passphrase is defined in src/config/chapters.jsonc → chapters[prologue].passphrase
# No env var needed — it lives with the game content.

# =============================================================================
# MESSAGING (Phase 3+)
# =============================================================================

# Twilio — used for SMS summons delivery
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Resend — used for email summons delivery
RESEND_API_KEY=

# =============================================================================
# AI (Phase 3+)
# =============================================================================

# Perplexity Sonar — used for the Oracle Q&A feature
# Get your key at https://www.perplexity.ai/api-platform
PERPLEXITY_API_KEY=

# =============================================================================
# TESTING
# =============================================================================

# Device token (device_token cookie) of a test-track enrolled device.
# Used by oracle:test to authenticate against the real /api/oracle route.
# Only test-track tokens are accepted — the script refuses live-track tokens.
ORACLE_TEST_DEVICE_TOKEN=

# =============================================================================
# DEPLOYMENT
# =============================================================================

# Public-facing URL of the deployed site (no trailing slash).
# Used for enrollment link generation and messaging templates.
# Local:  http://localhost:3000
# Prod:   https://giltframe.org
NEXT_PUBLIC_SITE_URL=

# Secret used to authenticate Vercel Cron invocations.
# Set in Vercel dashboard → Settings → Environment Variables.
# Vercel auto-populates this for cron jobs.
CRON_SECRET=
